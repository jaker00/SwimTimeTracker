
<h1>Attendances</h1>

<p><a href="/new_attendance">Add a New Attendance</a></p>

<table>
  <thead>
    <tr>
      <th>Meet</th>
      <th>Swimmer</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @attendances.each do |attendance| %>
    <tr>
          <td><%= attendance.meet.name %>&nbsp &nbsp</td>
      <td><%= attendance.swimmer.last_name %>, <%= attendance.swimmer.first_name %>&nbsp &nbsp</td>
          <td><a href="/attendances/<%= attendance.id %>">Show</a>&nbsp
        </td>
      <td><a href="/attendances/<%= attendance.id %>/edit">Edit</a>&nbsp</td>
      <td><a href="/attendances/<%= attendance.id %>/destroy">Destroy</a></td>
    </tr>
  <% end %>
  </tbody>
</table>

